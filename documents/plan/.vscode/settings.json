{
  "latex-workshop.latex.recipes": [
    {
      "name": "texify",
      "tools": ["texify"]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "texify",
      "command": "texify",
      "args": [
        "--pdf",
        "--synctex=1",
        "--clean",
        "--tex-option=\"-interaction=nonstopmode\"",
        "--tex-option=\"-file-line-error\"",
        "%DOC_EXT%"
      ],
      "env": {}
    }
  ],
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "fyp_plan.tex",
        "isAsync": true,
        "cmd": "texcount -sum -1 fyp_plan.tex > wordcount.txt"
      },
      {
        "match": "fyp_interim_report.tex",
        "isAsync": true,
        "cmd": "texcount -sum -1 fyp_interim_report.tex > wordcount.txt"
      }
    ]
  }
}
